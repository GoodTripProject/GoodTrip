<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.profile.mytrips.PostEditorFragment">
  <androidx.core.widget.NestedScrollView
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      app:layout_constraintTop_toTopOf="parent"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/postImageView"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kazantip" />

      <TextView
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/postTitle"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="50sp" />
      <!--      <TextView-->
      <!--        android:id="@+id/tripDuration"-->
      <!--        android:layout_gravity="center"-->
      <!--        android:layout_width="wrap_content"-->
      <!--        android:layout_height="wrap_content"-->
      <!--        android:text="duration" />-->
      <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="#808080" />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
          android:padding="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="30sp"
          android:textColor="@color/black"
          android:layout_marginStart="15dp"
          android:text="Budget:" />
        <TextView
          android:id="@+id/budgetLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:textColor="@color/black"
          android:textStyle="italic"
          android:text="two thousand nineteen rubles" />

      </LinearLayout>

      <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="#808080" />
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
          android:padding="10dp"
          android:layout_marginStart="15dp"
          android:id="@+id/countries_text_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Route:"
          android:textColor="@color/black"
          android:textSize="30sp"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/add_country" />
        <ImageButton
          android:layout_gravity="center"
          android:id="@+id/add_new_country"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginStart="80dp"
          android:src="@drawable/baseline_add_24"
          android:background="@drawable/profile_button_shape"
          app:tint="@color/white" />
        <TextView
          android:padding="10dp"
          android:layout_gravity="center"
          android:textSize="15sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Add new destination" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

      </LinearLayout>
      <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="#808080" />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
          android:padding="10dp"
          android:layout_marginStart="15dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Notes:"
          android:textColor="@color/black"
          android:textSize="30sp"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/add_country" />
        <ImageButton
          android:layout_gravity="center"
          android:id="@+id/add_new_note"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginStart="80dp"
          android:src="@drawable/baseline_add_24"
          android:background="@drawable/profile_button_shape"
          app:tint="@color/white" />
        <TextView
          android:padding="10dp"
          android:layout_gravity="center"
          android:textSize="15sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Add new note" />
      </LinearLayout>


      <LinearLayout
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

      </LinearLayout>
      <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="#808080" />

      <Button
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:id="@+id/postButton"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="60dp"
        android:layout_width="300dp"
        android:text="Post"
        android:textSize="20sp" />
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>